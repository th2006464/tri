<!DOCTYPE html>
<html>
<head>
    <title>三角定位地图</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <style>
        #map {
            width: 100%;
            height: 100vh;
        }

        .radius-marker {
            font-size: 12px;  /* 设置文字大小 */
            color: red;  /* 设置文字颜色 */
            white-space: nowrap;  /* 防止换行 */
        }
    </style>
</head>
<body>
    <div id="map"></div>
    <script>
        var map = L.map('map').setView([31.2304, 121.4737], 13); // 上海市中心的坐标

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
        }).addTo(map);

        var circles = [];

        function showRadius(radius) {
            return L.divIcon({
                className: 'radius-marker',
                html: '<div>' + radius + '米</div>'
            });
        }

        map.on('click', function(e) {
            var radius = prompt("请输入半径（单位：米）：");
            var circle = L.circle(e.latlng, {
                color: 'red',
                fillColor: '#ADD8E6',  // 浅蓝色
                fillOpacity: 0.5,
                radius: radius
            }).addTo(map);
            circles.push(circle);
            
            L.marker(e.latlng, {icon: showRadius(radius)}).addTo(map);
        });

        window.addEventListener('resize', function() {
            map.invalidateSize();
        });
    </script>
</body>
</html>